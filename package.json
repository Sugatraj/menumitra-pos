{
  "name": "pos-outlet",
  "version": "1.0.0",
  "private": true,
  "description": "Restaurant Management App",
  "main": "public/electron.js",
  "author": "Your Name",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder --win --x64",
    "electron:start": "wait-on tcp:3000 && electron .",
    "make-installer": "npm run clean && npm run build && electron-builder --win nsis",
    "clean": "rimraf build dist"
  },
  "build": {
    "appId": "com.menumitra.pos",
    "productName": "MenuMitra POS",
    "publish": {
      "provider": "github",
      "owner": "YourGitHubUsername",
      "repo": "YourRepoName",
      "private": true,
      "token": "YOUR_GITHUB_TOKEN"
    },
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "public/electron.js",
      "public/preload.js",
      "public/icon.ico"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico"
    }
  },
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.1",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "axios": "^1.7.9",
    "core-js": "^3.39.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.3.0",
    "electron-pos-printer": "^1.3.7",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^5.3.0",
    "firebase": "^11.2.0",
    "framer-motion": "^12.4.2",
    "node-libs-browser": "^2.2.1",
    "primeicons": "^7.0.0",
    "primereact": "^10.9.1",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-datepicker": "^7.6.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.1.0",
    "react-scripts": "5.0.1",
    "react-slick": "^0.30.3",
    "react-tooltip": "^5.28.0",
    "slick-carousel": "^1.8.1",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^24.8.8",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "fs-extra": "^11.2.0",
    "postcss": "^8.4.49",
    "sharp": "^0.33.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
